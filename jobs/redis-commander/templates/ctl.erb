#!/bin/bash

RUN_DIR=/var/vcap/sys/run/redis-commander
LOG_DIR=/var/vcap/sys/log/redis-commander
PIDFILE=${RUN_DIR}/redis-commander.pid
COMMANDER=/var/vcap/packages/redis-commander/bin/redis-commander.js

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ >> $PIDFILE

    cd /var/vcap/packages/nodejs

    exec chpst -u vcap:vcap ./bin/node $COMMANDER \
      <% if propreties.redis-commander.redis_server_port %>--redis-port  <%= propreties.redis-commander.redis_server_port %><% end %> \
      <% if propreties.redis-commander.redis_server_host %>--redis-host <%= propreties.redis-commander.redis_server_host %><% end %> \
      <% if propreties.redis-commander.redis_server_socket %>--redis-socket <%= propreties.redis-commander.redis_server_socket %><% end %> \
      <% if propreties.redis-commander.redis_password %>--redis-password <%= propreties.redis-commander.redis_password %><% end %> \
      <% if propreties.redis-commander.redis_db %>--redis-db <%= propreties.redis-commander.redis_db %><% end %> \
      <% if propreties.redis-commander.redis_auth_username %>--http-auth-username <%= propreties.redis-commander.redis_auth_username %><% end %> \
      <% if propreties.redis-commander.redis_auth_password %>--http-auth-password <%= propreties.redis-commander.redis_auth_password %><% end %> \
      <% if propreties.redis-commander.server_port %>--port <%= propreties.redis-commander.server_port %><% end %> \
      <% if propreties.redis-commander.server_address %>--address <%= propreties.redis-commander.server_address %><% end %> \
      >>  $LOG_DIR/redis-commander.stdout.log \
      2>> $LOG_DIR/redis-commander.stderr.log

    ;;

  stop)

    kill -9 `cat $PIDFILE`

    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
